{
  "rules": {
    "presets": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "settings": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "locations": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$date": {
        ".validate": "$date.matches(/^\\d{4}-\\d{2}-\\d{2}$/)",
        "place": { ".validate": "newData.isString()" },
        "city": { ".validate": "newData.isString()" },
        "country": { ".validate": "newData.isString()" },
        "flights": { ".validate": "newData.isString()" },
        "notes": { ".validate": "newData.isString()" },
        "lat": { ".validate": "newData.isNumber() || newData.val() === null" },
        "lon": { ".validate": "newData.isNumber() || newData.val() === null" },
        "working": { ".validate": "newData.isBoolean()" },
        "autoGps": { ".validate": "newData.isBoolean()" },
        "unconfirmed": { ".validate": "newData.isBoolean()" }
      }
    }
  }
}
